<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Hiking Report"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Hiking Report"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your hiking statistics and achievements"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:layout_marginBottom="24dp"/>

            <!-- Loading Progress -->
            <ProgressBar
                android:id="@+id/progress_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <!-- Statistics Cards Container -->
            <LinearLayout
                android:id="@+id/layout_statistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Basic Statistics Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ˆ Basic Statistics"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:layout_marginBottom="16dp"/>

                        <!-- Total Hikes -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ðŸ“ Total Hikes:"
                                android:textSize="16sp"
                                android:textColor="#34495E"/>

                            <TextView
                                android:id="@+id/text_total_hikes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#3498DB"/>
                        </LinearLayout>

                        <!-- Total Distance -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ðŸ“ Total Distance:"
                                android:textSize="16sp"
                                android:textColor="#34495E"/>

                            <TextView
                                android:id="@+id/text_total_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 km"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#3498DB"/>
                        </LinearLayout>

                        <!-- Total Duration -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="â±ï¸ Total Time:"
                                android:textSize="16sp"
                                android:textColor="#34495E"/>

                            <TextView
                                android:id="@+id/text_total_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 hrs"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#3498DB"/>
                        </LinearLayout>

                        <!-- Average Temperature -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ðŸŒ¡ï¸ Avg Temperature:"
                                android:textSize="16sp"
                                android:textColor="#34495E"/>

                            <TextView
                                android:id="@+id/text_avg_temperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0Â°C"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#3498DB"/>
                        </LinearLayout>

                        <!-- Top Location -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="â­ Top Location:"
                                android:textSize="16sp"
                                android:textColor="#34495E"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/text_top_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="N/A"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#E74C3C"
                                android:maxLines="3"
                                android:ellipsize="end"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Difficulty Chart Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ¯ Difficulty Breakdown"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:layout_marginBottom="16dp"/>

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/chart_difficulty"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Parking Chart Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ…¿ï¸ Parking Availability"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:layout_marginBottom="16dp"/>

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/chart_parking"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
